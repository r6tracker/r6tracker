---
import type { Lang } from "@/i18n";
import { useTranslations } from "@/i18n";
const t = useTranslations(Astro.currentLocale as Lang);

const JsonData = `{
    "faq_title": {
        "en": "R6 Tracker Frequently Asked Questions",
        "it": "Domande Frequenti su R6 Tracker",
        "de": "Häufig gestellte Fragen zu R6 Tracker"
    },
    "faq_description": {
        "en": "Find answers to common questions about R6 Tracker.",
        "it": "Trova risposte alle domande comuni su R6 Tracker.",
        "de": "Finden Sie Antworten auf häufig gestellte Fragen zu R6 Tracker."
    },
    "faq": [
        {
            "question": {
                "en": "What is R6 Tracker and how does it work?",
                "it": "Cos'è R6 Tracker e come funziona?",
                "de": "Was ist R6 Tracker und wie funktioniert es?"
            },
            "answer": {
                "en": "R6 Tracker is an advanced Rainbow Six Siege statistics platform that provides real-time tracking of your gameplay metrics. We pull public data from Ubisoft's servers to display your K/D ratio, win rate, operator performance, weapon statistics, and match history. Our R6 stats tracker helps competitive players analyze their performance and improve their Rainbow Six Siege gameplay.",
                "it": "R6 Tracker è una piattaforma avanzata di statistiche per Rainbow Six Siege che fornisce il monitoraggio in tempo reale delle tue metriche di gioco. Recuperiamo dati pubblici dai server di Ubisoft per visualizzare il tuo rapporto K/D, percentuale di vittorie, prestazioni degli operatori, statistiche delle armi e cronologia delle partite. Il nostro tracker di statistiche R6 aiuta i giocatori competitivi ad analizzare le loro prestazioni e migliorare il loro gameplay in Rainbow Six Siege.",
                "de": "R6 Tracker ist eine fortschrittliche Rainbow Six Siege Statistikplattform, die Echtzeit-Tracking Ihrer Spielmetriken bietet. Wir ziehen öffentliche Daten von Ubisofts Servern, um Ihr K/D-Verhältnis, Gewinnrate, Operator-Leistung, Waffenstatistiken und Spielverlauf anzuzeigen. Unser R6 Statistiken-Tracker hilft wettbewerbsorientierten Spielern, ihre Leistung zu analysieren und ihr Rainbow Six Siege Gameplay zu verbessern."
            }
        },
        {
            "question": {
                "en": "How do I track my Rainbow Six Siege stats?",
                "it": "Come posso monitorare le mie statistiche di Rainbow Six Siege?",
                "de": "Wie kann ich meine Rainbow Six Siege Statistiken verfolgen?"
            },
            "answer": {
                "en": "Tracking your R6 Siege stats is simple: 1) Select your gaming platform (PC, PlayStation, or Xbox), 2) Enter your Ubisoft username exactly as it appears in-game, 3) Click 'Get Started' to view your comprehensive Rainbow Six Siege statistics dashboard with detailed performance metrics and match history.",
                "it": "Monitorare le tue statistiche R6 Siege è semplice: 1) Seleziona la tua piattaforma di gioco (PC, PlayStation o Xbox), 2) Inserisci il tuo nome utente Ubisoft esattamente come appare in-game, 3) Clicca 'Inizia' per visualizzare il tuo dashboard completo di statistiche Rainbow Six Siege con metriche dettagliate delle prestazioni e cronologia delle partite.",
                "de": "Das Verfolgen Ihrer R6 Siege Statistiken ist einfach: 1) Wählen Sie Ihre Gaming-Plattform (PC, PlayStation oder Xbox), 2) Geben Sie Ihren Ubisoft-Benutzernamen genau so ein, wie er im Spiel erscheint, 3) Klicken Sie auf 'Starten', um Ihr umfassendes Rainbow Six Siege Statistiken-Dashboard mit detaillierten Leistungsmetriken und Spielverlauf anzuzeigen."
            }
        },
        {
            "question": {
                "en": "Is R6 Tracker completely free to use?",
                "it": "R6 Tracker è completamente gratuito?",
                "de": "Ist R6 Tracker völlig kostenlos?"
            },
            "answer": {
                "en": "Yes! R6 Tracker offers 100% free access to all Rainbow Six Siege tracking features. You can monitor your K/D ratio, win rate, operator stats, weapon performance, and competitive ranking without any subscription fees. Our free R6 stats tracker provides the same detailed analytics that professional Rainbow Six Siege players use to improve their gameplay.",
                "it": "Sì! R6 Tracker offre accesso completamente gratuito a tutte le funzionalità di monitoraggio di Rainbow Six Siege. Puoi monitorare il tuo rapporto K/D, percentuale di vittorie, statistiche degli operatori, prestazioni delle armi e classifica competitiva senza alcun costo di abbonamento. Il nostro tracker di statistiche R6 gratuito fornisce le stesse analisi dettagliate che i giocatori professionisti di Rainbow Six Siege utilizzano per migliorare il loro gameplay.",
                "de": "Ja! R6 Tracker bietet 100% kostenlosen Zugang zu allen Rainbow Six Siege Tracking-Funktionen. Sie können Ihr K/D-Verhältnis, Gewinnrate, Operator-Statistiken, Waffenleistung und Wettbewerbsranking ohne Abonnementgebühren überwachen. Unser kostenloser R6 Statistiken-Tracker bietet die gleichen detaillierten Analysen, die professionelle Rainbow Six Siege Spieler verwenden, um ihr Gameplay zu verbessern."
            }
        },
        {
            "question": {
                "en": "How often are my R6 Siege statistics updated?",
                "it": "Ogni quanto vengono aggiornate le mie statistiche R6 Siege?",
                "de": "Wie oft werden meine R6 Siege Statistiken aktualisiert?"
            },
            "answer": {
                "en": "Your Rainbow Six Siege stats are updated in near real-time. Our system refreshes: • Match results within 2-5 minutes of completion • Ranked MMR updates after each competitive match • Operator and weapon statistics after every game session • Leaderboard rankings updated hourly. This ensures you always have access to the most current R6 Tracker data for accurate performance analysis.",
                "it": "Le tue statistiche Rainbow Six Siege vengono aggiornate quasi in tempo reale. Il nostro sistema aggiorna: • Risultati delle partite entro 2-5 minuti dal completamento • Aggiornamenti MMR ranked dopo ogni partita competitiva • Statistiche di operatori e armi dopo ogni sessione di gioco • Classifiche leaderboard aggiornate ogni ora. Ciò garantisce che tu abbia sempre accesso ai dati R6 Tracker più recenti per un'analisi accurata delle prestazioni.",
                "de": "Ihre Rainbow Six Siege Statistiken werden nahezu in Echtzeit aktualisiert. Unser System aktualisiert: • Spielergebnisse innerhalb von 2-5 Minuten nach Abschluss • Ranglisten-MMR-Updates nach jedem Wettkampfspiel • Operator- und Waffenstatistiken nach jeder Spielsitzung • Leaderboard-Ranglisten stündlich aktualisiert. Dies stellt sicher, dass Sie immer Zugriff auf die aktuellsten R6 Tracker-Daten für eine genaue Leistungsanalyse haben."
            }
        },
        {
            "question": {
                "en": "Is my Ubisoft account data secure with R6 Tracker?",
                "it": "I dati del mio account Ubisoft sono al sicuro con R6 Tracker?",
                "de": "Sind meine Ubisoft-Kontodaten bei R6 Tracker sicher?"
            },
            "answer": {
                "en": "Absolutely. R6 Tracker only accesses publicly available Rainbow Six Siege statistics through Ubisoft's official API. We never request or store your Ubisoft login credentials, personal information, or private data. Your R6 Tracker experience uses the same public data that appears on Ubisoft's own leaderboards and stat tracking services, ensuring complete security while providing advanced Rainbow Six Siege analytics.",
                "it": "Assolutamente. R6 Tracker accede solo alle statistiche pubbliche di Rainbow Six Siege attraverso l'API ufficiale di Ubisoft. Non richiediamo né memorizziamo mai le tue credenziali di accesso Ubisoft, informazioni personali o dati privati. La tua esperienza con R6 Tracker utilizza gli stessi dati pubblici che appaiono sui leaderboard e servizi di tracking statistiche di Ubisoft, garantendo una sicurezza completa mentre forniamo analisi avanzate di Rainbow Six Siege.",
                "de": "Absolut. R6 Tracker greift nur auf öffentlich verfügbare Rainbow Six Siege Statistiken über Ubisofts offizielle API zu. Wir fordern oder speichern niemals Ihre Ubisoft-Anmeldedaten, persönlichen Informationen oder privaten Daten. Ihr R6 Tracker-Erlebnis verwendet die gleichen öffentlichen Daten, die auf Ubisofts eigenen Bestenlisten und Statistik-Tracking-Diensten erscheinen, was vollständige Sicherheit gewährleistet, während wir fortschrittliche Rainbow Six Siege Analysen bereitstellen."
            }
        },
        {
            "question": {
                "en": "What platforms does R6 Tracker support for Rainbow Six Siege?",
                "it": "Quali piattaforme supporta R6 Tracker per Rainbow Six Siege?",
                "de": "Welche Plattformen unterstützt R6 Tracker für Rainbow Six Siege?"
            },
            "answer": {
                "en": "R6 Tracker supports all major gaming platforms for Rainbow Six Siege statistics tracking: • PC (Ubisoft Connect) • PlayStation 4 & 5 • Xbox One & Series X/S. Our cross-platform R6 stats tracker allows you to monitor your performance regardless of where you play Rainbow Six Siege, with unified statistics and the same detailed analytics across all supported platforms.",
                "it": "R6 Tracker supporta tutte le principali piattaforme di gioco per il monitoraggio delle statistiche di Rainbow Six Siege: • PC (Ubisoft Connect) • PlayStation 4 & 5 • Xbox One & Series X/S. Il nostro tracker di statistiche R6 cross-platform ti consente di monitorare le tue prestazioni indipendentemente da dove giochi a Rainbow Six Siege, con statistiche unificate e le stesse analisi dettagliate su tutte le piattaforme supportate.",
                "de": "R6 Tracker unterstützt alle major Gaming-Plattformen für Rainbow Six Siege Statistiken-Tracking: • PC (Ubisoft Connect) • PlayStation 4 & 5 • Xbox One & Series X/S. Unser plattformübergreifender R6 Statistiken-Tracker ermöglicht es Ihnen, Ihre Leistung unabhängig davon zu überwachen, wo Sie Rainbow Six Siege spielen, mit vereinheitlichten Statistiken und denselben detaillierten Analysen auf allen unterstützten Plattformen."
            }
        },
        {
            "question": {
                "en": "Can I compare my stats with other Rainbow Six Siege players?",
                "it": "Posso confrontare le mie statistiche con altri giocatori di Rainbow Six Siege?",
                "de": "Kann ich meine Statistiken mit anderen Rainbow Six Siege Spielern vergleichen?"
            },
            "answer": {
                "en": "Yes! R6 Tracker provides comprehensive comparison tools: • Global leaderboards showing top Rainbow Six Siege players worldwide • Direct player vs player stat comparisons • Regional ranking comparisons • Operator-specific performance benchmarks • Weapon efficiency comparisons. These features help you benchmark your R6 Siege performance against the competitive community and identify areas for improvement in your Rainbow Six Siege gameplay.",
                "it": "Sì! R6 Tracker fornisce strumenti completi di confronto: • Leaderboard globali che mostrano i migliori giocatori di Rainbow Six Siege in tutto il mondo • Confronti diretti statistiche giocatore vs giocatore • Confronti di classifiche regionali • Benchmark prestazioni specifici per operatore • Confronti di efficienza delle armi. Queste funzionalità ti aiutano a confrontare le tue prestazioni R6 Siege con la community competitiva e identificare aree di miglioramento nel tuo gameplay di Rainbow Six Siege.",
                "de": "Ja! R6 Tracker bietet umfassende Vergleichstools: • Globale Bestenlisten, die die besten Rainbow Six Siege Spieler weltweit zeigen • Direkte Spieler-gegen-Spieler-Statistikvergleiche • Regionale Ranking-Vergleiche • Operatorspezifische Leistungsbenchmarks • Waffeneffizienzvergleiche. Diese Funktionen helfen Ihnen, Ihre R6 Siege Leistung an der Wettbewerbscommunity zu benchmarken und Bereiche für Verbesserungen in Ihrem Rainbow Six Siege Gameplay zu identifizieren."
            }
        },
        {
            "question": {
                "en": "What specific stats does R6 Tracker monitor for Rainbow Six Siege?",
                "it": "Quali statistiche specifiche monitora R6 Tracker per Rainbow Six Siege?",
                "de": "Welche spezifischen Statistiken überwacht R6 Tracker für Rainbow Six Siege?"
            },
            "answer": {
                "en": "R6 Tracker monitors comprehensive Rainbow Six Siege performance metrics including: • K/D Ratio (Kill/Death) tracking • Win/Loss statistics and win rate percentage • Headshot percentage and accuracy metrics • Operator-specific performance data • Weapon efficiency and usage statistics • Match history with round-by-round details • Ranked MMR and competitive ranking • Seasonal performance trends • Map-specific win rates • Game mode statistics (Ranked, Casual, Unranked) • Time-based performance analytics for detailed Rainbow Six Siege stat tracking.",
                "it": "R6 Tracker monitora metriche complete delle prestazioni di Rainbow Six Siege inclusi: • Monitoraggio rapporto K/D (Uccisioni/Morti) • Statistiche vittorie/sconfitte e percentuale vittorie • Percentuale colpi alla testa e metriche precisione • Dati prestazioni specifici per operatore • Statistiche efficienza e utilizzo armi • Cronologia partite con dettagli round per round • MMR ranked e classifica competitiva • Trend prestazioni stagionali • Percentuali vittorie specifiche per mappa • Statistiche modalità di gioco (Ranked, Casual, Unranked) • Analisi prestazioni basate sul tempo per un monitoraggio dettagliato delle statistiche di Rainbow Six Siege.",
                "de": "R6 Tracker überwacht umfassende Rainbow Six Siege Leistungsmetriken einschließlich: • K/D-Verhältnis (Kills/Tode) Tracking • Gewinn/Verlust-Statistiken und Gewinnratenprozentsatz • Kopfschussprozentsatz und Genauigkeitsmetriken • Operatorspezifische Leistungsdaten • Waffeneffizienz- und Nutzungsstatistiken • Spielverlauf mit Runde-für-Runde-Details • Ranglisten-MMR und Wettbewerbsranking • Saisonale Leistungstrends • Kartenspezifische Gewinnraten • Spielmodus-Statistiken (Rangliste, Casual, Unranked) • Zeitbasierte Leistungsanalysen für detailliertes Rainbow Six Siege Statistik-Tracking."
            }
        }
    ]
}`;

const data = JSON.parse(JsonData);
---

<script>
    import "@preline/accordion/index.js";
</script>
<!-- FAQ -->
<div class="max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 mx-auto">
    <!-- Title -->
    <div class="max-w-2xl mx-auto text-center mb-10 lg:mb-14">
        <h2
            class="text-2xl font-bold md:text-4xl md:leading-tight dark:text-white"
        >
            {t(data.faq_title)}
        </h2>
        <p class="mt-1 text-gray-600 dark:text-neutral-400">
            {t(data.faq_description)}
        </p>
    </div>
    <!-- End Title -->

    <div class="max-w-2xl mx-auto">
        <!-- Accordion -->
        <div class="hs-accordion-group">
            {
                data.faq.map((item: any, i: number) => (
                    <div
                        class={`hs-accordion hs-accordion-active:bg-gray-100 rounded-xl p-6 dark:hs-accordion-active:bg-white/10 ${i === 0 ? "active" : ""}`}
                        id={`hs-a-${i}`}
                    >
                        <button
                            class="hs-accordion-toggle group pb-3 inline-flex items-center justify-between gap-x-3 w-full md:text-lg font-semibold text-start text-gray-800 rounded-lg transition hover:text-gray-500 focus:outline-hidden focus:text-gray-500 dark:text-neutral-200 dark:hover:text-neutral-400 dark:focus:text-neutral-400"
                            aria-expanded={i === 0}
                            aria-controls={`hs-c-${i}`}
                        >
                            {t(item.question)}
                            <svg
                                class="hs-accordion-active:hidden block shrink-0 size-5 text-gray-600 group-hover:text-gray-500 dark:text-neutral-400"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                viewBox="0 0 24 24"
                            >
                                <path d="m6 9 6 6 6-6" />
                            </svg>
                            <svg
                                class="hs-accordion-active:block hidden shrink-0 size-5 text-gray-600 group-hover:text-gray-500 dark:text-neutral-400"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                viewBox="0 0 24 24"
                            >
                                <path d="m18 15-6-6-6 6" />
                            </svg>
                        </button>
                        <div
                            id={`hs-c-${i}`}
                            class={`hs-accordion-content w-full overflow-hidden transition-[height] duration-300 ${i === 0 ? "" : "hidden"}`}
                        >
                            <p class="text-gray-800 dark:text-neutral-200">
                                {t(item.answer)}
                            </p>
                        </div>
                    </div>
                ))
            }
        </div>
        <!-- End Accordion -->
    </div>
</div>

