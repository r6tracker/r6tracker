---
import { useTranslations, type Lang } from "@/i18n";
import { DEFAULT_LOCALE_SETTING } from "@/locales";
import { getRelativeLocaleUrl } from "astro:i18n";
const locale = Astro.currentLocale || DEFAULT_LOCALE_SETTING;
const t = useTranslations(Astro.currentLocale as Lang);
const today = new Date();
---

<footer class="bg-gray-800 py-8">
        <div class="container mx-auto px-4">
                <div class="flex flex-col md:flex-row items-center justify-between">
                        <div class="flex items-center space-x-2 mb-4 md:mb-0">
                                <div class="bg-red-600 w-8 h-8 rounded-full flex items-center justify-center">
                                        <span class="font-bold text-white">R6</span>
                                </div>
                                <h3 class="text-xl font-bold text-white">R6 Tracker</h3>
                        </div>
                        <ul class="flex space-x-6 text-gray-400">
                                <li>
                                        <a href="/privacy/" class="hover:text-white transition-colors">
                                                {t({
                                                        en: "Privacy Policy",
                                                        it: "Informativa sulla privacy",
                                                        de: "Datenschutzrichtlinie"
                                                })}
                                        </a>
                                </li>
                                <li>
                                        <a href="/terms/" class="hover:text-white transition-colors">
                                                {t({
                                                        en: "Terms of Service",
                                                        it: "Termini di servizio",
                                                        de: "Nutzungsbedingungen"
                                                })}
                                        </a>
                                </li>
                        </ul>
                </div>
                <div class="border-t border-gray-700 mt-6 pt-4 text-center text-gray-500 text-sm">
                        <p>
                                &copy; {today.getFullYear()} R6 Tracker. {t({
                                        en: "This website is not affiliated with Ubisoft or Rainbow Six Siege.",
                                        it: "Questo sito non Ã¨ affiliato con Ubisoft o Rainbow Six Siege.",
                                        de: "Diese Website ist nicht mit Ubisoft oder Rainbow Six Siege verbunden."
                                })}
                        </p>
                </div>
        </div>
</footer>
